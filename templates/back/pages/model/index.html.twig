{% extends '/back/base.html.twig' %}

{% block title %}{{ 'model.index.title'|trans }}{% endblock %}

{% block body %}
    <h1 class="my-3">{{ 'model.index.title'|trans }}</h1>

    <a href="{{ path('app_admin_model_new') }}" class="button button-add"><i class="fa-solid fa-plus"></i>{{ 'model.index.createNew'|trans }}</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'model.index.table.id'|trans }}</th>
                <th>{{ knp_pagination_sortable(
                        models,
                        'model.index.table.name'|trans,
                        'm.name'
                    )|raw }}</th>
                <th>{{ 'model.index.table.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.name }}</td>
                <td>
                    <a href="{{ path('app_admin_model_show', {'id': model.id}) }}" class="button"><i class="fa-solid fa-eye"></i></a>
                    <a href="{{ path('app_admin_model_edit', {'id': model.id}) }}" class="button"><i class="fa-solid fa-file-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center my-2">
        {{ knp_pagination_render(models) }}
    </div>





{% endblock %}
