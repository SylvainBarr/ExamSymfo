{% extends '/back/base.html.twig' %}

{% block title %}{{ 'model.show.title'|trans({'%name%' : model.fullName}) }}{% endblock %}

{% block body %}

    <h1 class="my-3">{{ 'model.show.title'|trans({'%name%' : model.fullName}) }}</h1>

    <a href="{{ path('app_admin_model_index') }}" class="button button-add"><i class="fa-solid fa-left-long"></i>{{ 'admin.button.backTolist'|trans }}</i></a>


    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'model.index.table.id'|trans }}</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>{{ 'model.index.table.name'|trans }}</th>
                <td>{{ model.name }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('back/pages/model/_delete_form.html.twig') }}

    <a href="{{ path('app_admin_model_edit', {'id': model.id}) }}" class="button button-add"><i class="fa-solid fa-file-pen"></i></a>




{% endblock %}
